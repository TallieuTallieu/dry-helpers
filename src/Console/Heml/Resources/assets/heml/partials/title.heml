{% if @@decorate !== 'decorate' && @@decorate %}
	<row>
		<column>
			<row>
				<column>
					<h1 class="primary-title">
						{{ @@title }}
					</h1>
				</column>
			</row>
			<row>
				<column class="divider divider--thick" large="2" small="2">&nbsp;</column>
			</row>
		</column>
	</row>
{% else %}
	<h1 class="primary-title">
		{{ @@title }}
	</h1>
{% /if %}